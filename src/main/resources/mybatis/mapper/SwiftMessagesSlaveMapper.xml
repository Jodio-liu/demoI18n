<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demoi18n.mapper.SwiftMessagesSlaveMapper">

    <select id="getMsgInfoByMsgIds" resultType="com.example.demoi18n.entity.SwiftMessagesPo">
        select
        <include refid="Base_Column_List"></include>
        from swift_messages
        where id in
        <foreach collection="msgIds" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
        order by score desc
    </select>


    <sql id="Base_Column_List">
        id, msg_content,score,create_time,update_time
    </sql>

</mapper>